<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".certification"
    android:background="@drawable/congratulations"
    >

    <Button
        android:id="@+id/get_btn"
        android:layout_width="316dp"
        android:layout_height="62dp"
        android:layout_marginBottom="92dp"
        android:background="#041678"
        android:outlineAmbientShadowColor="#3F51B5"
        android:text="GET THE CERTIFICATION"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/certification_id"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/certification_id"
        android:layout_width="0dp"
        android:layout_height="143dp"
        android:layout_marginTop="236dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/certification" />

</androidx.constraintlayout.widget.ConstraintLayout>